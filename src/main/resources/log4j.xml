<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd/MM HH:mm:ss} [%t] %1p (%c{2}) %m%n" />
		</layout>
	</appender>

	<appender name="web" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="append" value="true" />
		<param name="file" value="/zdp/logs/ledger.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd/MM HH:mm:ss} %1p (%c{2}) %m%n" />
		</layout>
	</appender>

	<logger name="io.zdp" additivity="false">
		<level value="debug" />
		<appender-ref ref="web" />
		<appender-ref ref="console" />
	</logger>

	<logger name="org.springframework.web" additivity="false">
		<level value="ALL" />
		<appender-ref ref="web" />
		<appender-ref ref="console" />
	</logger>

	<root>
		<priority value="INFO" />
		<appender-ref ref="web" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>